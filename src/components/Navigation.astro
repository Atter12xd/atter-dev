---
import { Menu, X, Github, Linkedin, Mail } from 'lucide-react';
---

<nav class="fixed top-0 w-full z-50 bg-gray-950/80 backdrop-blur-md border-b border-gray-800/50" id="navigation">
  <div class="container mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-14 sm:h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <div class="nav-logo w-7 h-7 sm:w-8 sm:h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
          <span class="text-white font-bold text-xs sm:text-sm">A</span>
        </div>
        <span class="nav-brand text-lg sm:text-xl font-bold bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent">
          Atter.dev
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#services" class="text-gray-300 hover:text-white transition-colors relative group">
          Servicios
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-600 group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="#projects" class="text-gray-300 hover:text-white transition-colors relative group">
          Proyectos
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-600 group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="#tech" class="text-gray-300 hover:text-white transition-colors relative group">
          Tecnologías
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-600 group-hover:w-full transition-all duration-300"></span>
        </a>
        <a href="#contact" class="text-gray-300 hover:text-white transition-colors relative group">
          Contacto
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-600 group-hover:w-full transition-all duration-300"></span>
        </a>
      </div>

      <!-- Social Links Desktop -->
      <div class="hidden md:flex items-center space-x-4">
        <a href="https://github.com/atterdev" target="_blank" class="text-gray-400 hover:text-white transition-colors p-2 rounded-lg hover:bg-gray-800">
          <Github class="w-5 h-5" />
        </a>
        <a href="https://linkedin.com/in/atterbasilio" target="_blank" class="text-gray-400 hover:text-white transition-colors p-2 rounded-lg hover:bg-gray-800">
          <Linkedin class="w-5 h-5" />
        </a>
        <a href="mailto:hola@atter.dev" class="text-gray-400 hover:text-white transition-colors p-2 rounded-lg hover:bg-gray-800">
          <Mail class="w-5 h-5" />
        </a>
      </div>

      <!-- Mobile menu button -->
      <button 
        class="md:hidden text-gray-300 hover:text-white transition-colors p-2 touchable"
        id="mobile-menu-button"
        aria-label="Menú móvil"
      >
        <Menu class="w-6 h-6" id="menu-icon" />
        <X class="w-6 h-6 hidden" id="close-icon" />
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="mobile-menu md:hidden hidden" id="mobile-menu">
      <div class="py-4 space-y-1">
        <a href="#services" class="block text-gray-300 hover:text-white transition-colors py-3 px-2 rounded-lg hover:bg-gray-800/50">
          Servicios
        </a>
        <a href="#projects" class="block text-gray-300 hover:text-white transition-colors py-3 px-2 rounded-lg hover:bg-gray-800/50">
          Proyectos
        </a>
        <a href="#tech" class="block text-gray-300 hover:text-white transition-colors py-3 px-2 rounded-lg hover:bg-gray-800/50">
          Tecnologías
        </a>
        <a href="#contact" class="block text-gray-300 hover:text-white transition-colors py-3 px-2 rounded-lg hover:bg-gray-800/50">
          Contacto
        </a>
        
        <!-- Mobile Social Links -->
        <div class="flex items-center justify-center space-x-6 pt-4 mt-4 border-t border-gray-800/50">
          <a href="https://github.com/atterdev" target="_blank" class="text-gray-400 hover:text-white transition-colors p-3 touchable">
            <Github class="w-6 h-6" />
            <span class="sr-only">GitHub</span>
          </a>
          <a href="https://linkedin.com/in/atterbasilio" target="_blank" class="text-gray-400 hover:text-white transition-colors p-3 touchable">
            <Linkedin class="w-6 h-6" />
            <span class="sr-only">LinkedIn</span>
          </a>
          <a href="mailto:hola@atter.dev" class="text-gray-400 hover:text-white transition-colors p-3 touchable">
            <Mail class="w-6 h-6" />
            <span class="sr-only">Email</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  if (button && menu) {
    button.addEventListener('click', () => {
      menu.classList.toggle('hidden');
      menuIcon?.classList.toggle('hidden');
      closeIcon?.classList.toggle('hidden');
    });
  }

  // Close mobile menu when clicking on links
  const mobileLinks = document.querySelectorAll('#mobile-menu a[href^="#"]');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    });
  });

  // Navigation background on scroll
  const nav = document.getElementById('navigation');
  if (nav) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        nav.classList.add('bg-gray-950/95');
        nav.classList.remove('bg-gray-950/80');
      } else {
        nav.classList.add('bg-gray-950/80');
        nav.classList.remove('bg-gray-950/95');
      }
    });
  }

  // Close mobile menu on outside click
  document.addEventListener('click', (e) => {
    const target = e.target;
    if (!button?.contains(target) && !menu?.contains(target) && !menu?.classList.contains('hidden')) {
      menu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
  });
</script>