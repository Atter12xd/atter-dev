---
import { Mail, MessageCircle, Send } from 'lucide-react';
---

<section id="contact" class="py-20 bg-gray-900/50" data-animate>
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center mb-16">
      <span class="text-gradient">
        Hablemos de tu proyecto
      </span>
    </h2>

    <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-semibold mb-6">¬øTienes una idea? ¬°Hag√°mosla realidad!</h3>
          <p class="text-gray-400 text-lg">
            Especializado en automatizaci√≥n, e-commerce y desarrollo web moderno. 
            Desde MVPs hasta plataformas empresariales completas.
          </p>
        </div>

        <div class="space-y-6">
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
              <Mail className="w-6 h-6 text-blue-400" />
            </div>
            <div>
              <div class="font-semibold">Email</div>
              <a href="mailto:ferbasiliorengifo@gmail.com" class="text-blue-400 hover:text-blue-300 transition-colors">
                ferbasiliorengifo@gmail.com
              </a>
            </div>
          </div>

          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center">
              <MessageCircle className="w-6 h-6 text-green-400" />
            </div>
            <div>
              <div class="font-semibold">WhatsApp</div>
              <a href="https://wa.me/51933484150" class="text-green-400 hover:text-green-300 transition-colors">
                +51 933 484 150
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="glass-effect rounded-xl p-8">
        <form id="contactForm" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium mb-2">Nombre</label>
            <input 
              type="text" 
              id="name" 
              name="name"
              required
              class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              placeholder="Tu nombre completo"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email"
              required
              class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              placeholder="tu@email.com"
            />
          </div>

          <div>
            <label for="company" class="block text-sm font-medium mb-2">Empresa (opcional)</label>
            <input 
              type="text" 
              id="company" 
              name="company"
              class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              placeholder="Nombre de tu empresa"
            />
          </div>

          <div>
            <label for="project" class="block text-sm font-medium mb-2">Tipo de proyecto</label>
            <select 
              id="project" 
              name="project"
              required
              class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            >
              <option value="">Selecciona una opci√≥n</option>
              <option value="Aplicaci√≥n Web SaaS">Aplicaci√≥n Web SaaS</option>
              <option value="E-commerce / Tienda Online">E-commerce / Tienda Online</option>
              <option value="Automatizaci√≥n y Chatbots IA">Automatizaci√≥n y Chatbots IA</option>
              <option value="Sistema Multi-tenant">Sistema Multi-tenant</option>
              <option value="Integraci√≥n WhatsApp Business">Integraci√≥n WhatsApp Business</option>
              <option value="Portal Corporativo">Portal Corporativo</option>
              <option value="Otro">Otro</option>
            </select>
          </div>

          <div>
            <label for="budget" class="block text-sm font-medium mb-2">Presupuesto estimado</label>
            <select 
              id="budget" 
              name="budget"
              class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            >
              <option value="">Selecciona un rango</option>
              <option value="$500 - $2,000 USD">$500 - $2,000 USD</option>
              <option value="$2,000 - $5,000 USD">$2,000 - $5,000 USD</option>
              <option value="$5,000 - $10,000 USD">$5,000 - $10,000 USD</option>
              <option value="$10,000+ USD">$10,000+ USD</option>
              <option value="Por definir">Por definir</option>
            </select>
          </div>

          <div>
            <label for="timeline" class="block text-sm font-medium mb-2">Timeline del proyecto</label>
            <select 
              id="timeline" 
              name="timeline"
              class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            >
              <option value="">¬øCu√°ndo necesitas el proyecto?</option>
              <option value="Lo antes posible">Lo antes posible</option>
              <option value="En 1-2 semanas">En 1-2 semanas</option>
              <option value="En 1 mes">En 1 mes</option>
              <option value="En 2-3 meses">En 2-3 meses</option>
              <option value="Sin prisa">Sin prisa</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium mb-2">Descripci√≥n del proyecto</label>
            <textarea 
              id="message" 
              name="message"
              rows="4"
              required
              class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"
              placeholder="Cu√©ntame sobre tu proyecto, funcionalidades que necesitas, objetivos, etc..."
            ></textarea>
          </div>

          <button 
            type="submit"
            class="w-full bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white px-6 py-3 rounded-lg font-semibold hover:scale-105 transition-all flex items-center justify-center space-x-2"
          >
            <MessageCircle className="w-5 h-5" />
            <span>Enviar por WhatsApp</span>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  document.getElementById('contactForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Obtener los datos del formulario
    const formData = new FormData(this);
    const name = formData.get('name');
    const email = formData.get('email');
    const company = formData.get('company');
    const project = formData.get('project');
    const budget = formData.get('budget');
    const timeline = formData.get('timeline');
    const message = formData.get('message');
    
    // Crear el mensaje formateado para WhatsApp
    let whatsappMessage = `üöÄ *NUEVO PROYECTO* üöÄ\n\n`;
    whatsappMessage += `üë§ *Cliente:* ${name}\n`;
    whatsappMessage += `üìß *Email:* ${email}\n`;
    
    if (company) {
      whatsappMessage += `üè¢ *Empresa:* ${company}\n`;
    }
    
    whatsappMessage += `\nüìã *DETALLES DEL PROYECTO*\n`;
    whatsappMessage += `‚Ä¢ *Tipo:* ${project}\n`;
    
    if (budget) {
      whatsappMessage += `‚Ä¢ *Presupuesto:* ${budget}\n`;
    }
    
    if (timeline) {
      whatsappMessage += `‚Ä¢ *Timeline:* ${timeline}\n`;
    }
    
    whatsappMessage += `\nüí¨ *Descripci√≥n:*\n${message}\n`;
    whatsappMessage += `\nüìÖ *Enviado:* ${new Date().toLocaleDateString('es-ES')} - ${new Date().toLocaleTimeString('es-ES')}`;
    
    // Codificar el mensaje para URL
    const encodedMessage = encodeURIComponent(whatsappMessage);
    
    // Crear el enlace de WhatsApp
    const whatsappURL = `https://wa.me/51933484150?text=${encodedMessage}`;
    
    // Abrir WhatsApp
    window.open(whatsappURL, '_blank');
    
    // Opcional: Limpiar el formulario despu√©s de enviar
    this.reset();
    
    // Mostrar mensaje de confirmaci√≥n
    alert('Redirigiendo a WhatsApp... ¬°Gracias por tu inter√©s!');
  });
</script>

<style>
  .text-gradient {
    background: linear-gradient(135deg, #60a5fa, #a855f7, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .glass-effect {
    background: linear-gradient(135deg, rgba(17, 24, 39, 0.8), rgba(31, 41, 55, 0.6));
    backdrop-filter: blur(15px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
</style>