---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Atter Basilio - Full Stack Developer especializado en automatizaci√≥n y e-commerce" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Fuente Inter preload para mejor rendimiento -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  </head>
  <body class="bg-slate-950 text-white font-inter overflow-x-hidden">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>